<settings>
  <data_type>csv</data_type>
  <decimals_separator>.</decimals_separator>
  <background>
    <color>EFF0F2</color>
    <alpha>100</alpha>
    <border_color>EFF0F2</border_color>
    <border_alpha>100</border_alpha>
  </background>
  <balloon>
    <show><![CDATA[{title}:{value} {percents}%]]></show>
  </balloon>
  <legend>
    <enabled>0</enabled>
    <align>center</align>
  </legend>
  <pie>
    <y>50%</y>
    <radius>40%</radius>
  </pie>
  <animation>
    <pull_out_only_one>1</pull_out_only_one>
  </animation>
  <data_labels>
    <show>{title}: {value}</show>
    <radius>5%</radius>
    <max_width>500</max_width>
    <line_alpha>51</line_alpha>
  </data_labels>
</settings>