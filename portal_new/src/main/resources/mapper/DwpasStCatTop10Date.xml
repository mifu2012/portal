	<select id="listUserTop10Date" parameterType="java.util.HashMap"
		resultMap="DwpasStCatTop10DateResultMap">

		select
		product_id, report_date, user_type, sort_id, question,
		gmt_create, gmt_modified
		from dwpas_st_cat_top10_data
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="dayUserTypeList!=null">
				AND user_type in
				<foreach collection="dayUserTypeList" separator="," close=")" open="("
					item="userType">
					#{userType}
				</foreach>
			</if>
			
		</trim>
		
		AND product_id= #{productId} AND report_date = #{reportDate} 
		order by sort_id DESC
	</select>
