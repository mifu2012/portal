	AND e.menu_id = #{menuId,jdbcType=VARCHAR}
	AND e.DATE_TYPE = #{dateType,jdbcType=VARCHAR}
	AND e.MODULE_CODE = #{moduleCode,jdbcType=VARCHAR}
	AND c.com_kpi_code = f.com_kpi_code
	AND f.com_kpi_code = g.com_kpi_code
	AND g.kpi_code = #{kpiCode,jdbcType=VARCHAR}

