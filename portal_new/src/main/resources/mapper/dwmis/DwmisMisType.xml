<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.infosmart.dwmis.DwmisMisTypeMapper">
	<!-- 系统参数 -->
	<resultMap id="DwmisMisTypeMap" type="DwmisMisTypePo">
		<result property="typeId" column="type_id" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="groupId" column="group_id" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="typeName" column="type_name" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="detail" column="detail" javaType="java.lang.String"
			jdbcType="VARCHAR" />
	</resultMap>
	<!-- 根据分组ID列出所有的类型定义 -->
	<select id="listMisTypeByGroupId" parameterType="int"
		resultMap="DwmisMisTypeMap">
		select mt.detail,mt.group_id,mt.type_id,mt.type_name from
		dwmis_mis_type mt
		where mt.group_id=#{groupId}
	</select>
	<!-- 得到定义信息 -->
	<select id="getMisTypeByTypeId" parameterType="int" resultMap="DwmisMisTypeMap">
		select mt.detail,mt.group_id,mt.type_id,mt.type_name from
		dwmis_mis_type mt where mt.type_id=#{typeId}
	</select>
</mapper>